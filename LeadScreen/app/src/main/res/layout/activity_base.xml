<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context="com.example.xumeng.leadscreen.BaseActivity">

        <!--<android.support.v4.view.ViewPager-->

        <com.example.xumeng.leadscreen.NoSwipeViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">
        </com.example.xumeng.leadscreen.NoSwipeViewPager>
        <!--</android.support.v4.view.ViewPager>-->

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/headbottom"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/TabStyle"
            app:tabSelectedTextColor="@color/tabtext"
            app:tabTextColor="@color/tabtext">
        </android.support.design.widget.TabLayout>

</LinearLayout>

